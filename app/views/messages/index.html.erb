
<div class="row">

		<div class="col-md-3 text-center">
			<strong><%= @other.email %></strong>
		</div>

	<div class="col-md-9">
		
		<div class="panel panel-default">
			
			<div class="panel-heading">
				Conversation with <%= @other.email %>
			</div>

			<div class="panel-body">
				<div class="container">
						<%= form_for [@conversation, @conversation.messages.new], remote: true do |f| %>
							<div class="form-group" id="textbox">
								<%= f.text_field :content, placeholder: "Press enter to send", class: "form-control" %>
							</div>
							<%= f.hidden_field :user_id, value: current_user.id %>

							<div class="actions">
								<%= f.submit "Send Message", class: "btn btn-primary" %>
							</div>
						<% end %>
				
				</div>

			</div>
		</div>
		
		<% render @messages, locals: {conversation: @conversation} %> 
	
	</div>

</div>
<% subscribe_to conversation_messages_path(@conversation) %>
